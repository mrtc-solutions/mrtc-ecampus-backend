# ============================================
# MRTC ECAMPUS CONFIGURATION - EXAMPLE FILE
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# ============================================

# ============================================
# FIREBASE CONFIGURATION (Frontend)
# ============================================
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abc123def456
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# FIREBASE ADMIN (Backend Service Account)
# ============================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYOUR_MULTILINE_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----
FIREBASE_PRIVATE_KEY_ID=your_private_key_id_here

# ============================================
# ADMINISTRATION
# ============================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD_HASH=your_secure_password_hash

# ============================================
# PAYMENT GATEWAYS
# ============================================

# PayChangu (Malawi) - Test Mode
PAYCHANGU_PUBLIC_KEY=PUB-TEST-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PAYCHANGU_SECRET_KEY=SEC-TEST-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PAYCHANGU_WEBHOOK_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# PayPal - Sandbox Mode
PAYPAL_MERCHANT_ID=xxxxxxxxxxxxxxxx
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox  # Change to 'live' for production
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# ============================================
# GOOGLE SERVICES
# ============================================

# Google OAuth
GOOGLE_CLIENT_ID=xxxxxxxxxxxx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Google Service Account
GOOGLE_SERVICE_ACCOUNT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_CLIENT_ID=xxxxxxxxxxxx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com

# Google Drive
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id
GOOGLE_DRIVE_SERVICE_ACCOUNT_EMAIL=service-account@your-project.iam.gserviceaccount.com

# ============================================
# SYSTEM SETTINGS
# ============================================
EXCHANGE_RATE=800  # 1 USD = 800 MWK
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5500
API_BASE_URL=https://your-api-domain.com/api

# ============================================
# SECURITY
# ============================================
JWT_SECRET=generate_a_strong_random_secret_key_here_min_32_chars
SESSION_TIMEOUT=86400000  # 24 hours in milliseconds
ENCRYPTION_KEY=generate_a_32_character_encryption_key_here
CSRF_SECRET=another_strong_random_secret_for_csrf
COOKIE_SECRET=secret_for_cookie_encryption

# ============================================
# AI SERVICES
# ============================================

# Google Gemini AI
GEMINI_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
GEMINI_MODEL=gemini-pro
GEMINI_VISION_MODEL=gemini-pro-vision

# DeepSeek AI
DEEPSEEK_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Primary AI Provider
PRIMARY_AI_PROVIDER=gemini  # Options: gemini, deepseek, openai

# ============================================
# AI FEATURES
# ============================================
ENABLE_AI_CHAT=true
ENABLE_AI_QUIZ_GENERATION=true
ENABLE_AI_COURSE_HELPER=true
ENABLE_AI_TOUR_GUIDE=true
ENABLE_AI_CERTIFICATE_GENERATION=true
AI_RATE_LIMIT_PER_HOUR=100
AI_MAX_TOKENS=2000

# ============================================
# EMAIL SERVICE
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your_app_specific_password_here  # Use App Password, not regular password
EMAIL_FROM=Your Platform <your-email@gmail.com>
EMAIL_SECURE=true

# ============================================
# DATABASE & STORAGE
# ============================================
DATABASE_URL=mongodb://localhost:27017/mrtc-ecampus  # If using MongoDB
REDIS_URL=redis://localhost:6379  # If using Redis
MAX_FILE_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,video/mp4,text/html

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info  # Options: error, warn, info, debug
LOG_TO_FILE=true
LOG_DIRECTORY=./logs
LOG_RETENTION_DAYS=30

# ============================================
# ANALYTICS
# ============================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token
HOTJAR_ID=your_hotjar_id

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_REGISTRATION=true
ENABLE_GOOGLE_LOGIN=true
ENABLE_EMAIL_VERIFICATION=false  # Set to true in production
ENABLE_PAYMENT=true
ENABLE_CERTIFICATES=true
ENABLE_ASSESSMENTS=true
ENABLE_DISCUSSION_FORUM=true
ENABLE_NOTIFICATIONS=true

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW=15  # minutes
RATE_LIMIT_MAX=100  # requests per window
LOGIN_ATTEMPTS_LIMIT=5
LOGIN_LOCKOUT_MINUTES=15

# ============================================
# MONITORING
# ============================================
SENTRY_DSN=your_sentry_dsn_url
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# ============================================
# MALAWI SPECIFIC
# ============================================
DEFAULT_CURRENCY=MWK
DEFAULT_TIMEZONE=Africa/Blantyre
SUPPORT_PHONE=+265 xxx xxx xxx
SUPPORT_EMAIL=support@mrtc-ecampus.mw